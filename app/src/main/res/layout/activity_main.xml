<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.esiea.sqalli_hiezely.ms_app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_gravity="left|right"
        android:id="@+id/tv_hello_world"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:backgroundTint="#eb1e2ea8"
        android:background="@android:drawable/toast_frame"
        android:fontFamily="@string/abc_action_bar_home_description"
        android:phoneNumber="false"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliquer c&apos;est toster"
        android:onClick="First_button"
        android:id="@+id/btn_hello_world"
        android:textColor="#2f16c1"
        android:backgroundTint="#ffffff"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/tv_hello_world" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:onClick="Second_button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#000000"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recherche Google"
        android:onClick="Third_button"
        android:id="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#001aff"
        android:backgroundTint="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:id="@+id/rv_biere"
        android:layout_above="@+id/tv_hello_world"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:background="#ffffff"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#fbfbfb"
        style="@style/Base.AlertDialog.AppCompat.Light">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
